{
	"compilerOptions": {
	  "module": "esnext",
	  "lib": ["es2018"],
	  "target": "es2018",
	  "moduleResolution": "Node",
	  "outDir": "dist",
	  "baseUrl": "src/",
	  "sourceMap": true,
	  "strict": true,
	  "experimentalDecorators": true,
	  "noImplicitReturns": false,
	  "noImplicitAny": false,
	  "allowSyntheticDefaultImports": true,
	  "allowUnreachableCode": false
	},
	"include": ["**/*"],
	"exclude": [
	  "node_modules"
	]
  }